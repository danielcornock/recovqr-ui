{
    "plugins": [
        "stylelint-scss"
    ],
    "extends": ["stylelint-config-standard"],
    "rules": {
        "no-empty-source": null,
        "at-rule-no-unknown": [true, {
            "ignoreAtRules": ["use", "include", "mixin"]
        }],
        "selector-max-specificity": "0,2,0",
        "indentation": 4
    }
}